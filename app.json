{
  "id": "com.tuya.api",
  "version": "1.0.0",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Tuya Devices"
  },
  "description": {
    "en": "Add support for Tuya devices"
  },
  "category": ["appliances"],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Leon Lanen",
    "email": "l.lanen@gmail.com"
  },
  "drivers": [
    {
      "id": "driver",
      "name": {
        "en": "driver"
      },
      "class": "socket",
      "capabilities": ["onoff"],
      "images": {
        "large": "/drivers/driver/assets/images/large.png",
        "small": "/drivers/driver/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}
